<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 音频录制权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 调整音频路由/模式（用于部分机型麦克风兼容） -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- 备注：配置使用SharedPreferences，不需要外部存储权限，已移除READ/WRITE_EXTERNAL_STORAGE -->

    <!-- Android 13+ 通知权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 保持唤醒 (防止识别过程中休眠) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 悬浮窗与前台服务 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.BabelStream"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- 主Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 设置Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/settings"
            android:screenOrientation="portrait" />

        <!-- 悬浮字幕前台服务 -->
        <service
            android:name=".OverlayService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <service
            android:name=".RecognitionService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection|microphone|dataSync" />

    </application>

</manifest>
